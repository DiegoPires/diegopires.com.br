								a(href='http://www.linkedin.com/profile/view?id=67345762', target='_blank') Linkedin
							li
								i.fa.fa-github &nbsp;
								a(href='https://github.com/DiegoPires/', target='_blank') Github
							li 
								i.fa.fa-picture-o &nbsp;
								a(href='http://diegosilvapires.deviantart.com/', target='_blank') Deviantart
							li 
								i.fa.fa-flickr &nbsp;
